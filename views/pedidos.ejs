<!DOCTYPE html>
<html lang="pt-br">
<head>
  <%- include('partials/head', { title: 'Pedidos' }) %>
</head>
<body class="bg-stone-100 min-h-screen font-sans text-stone-800">

<div class="flex">
  <%- include('partials/sidebar', { active: 'pedidos' }) %>

  <main class="flex-1 p-8">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-3xl font-bold text-stone-900 mb-2">Pedidos</h1>
      <p class="text-stone-500 mb-8">Filtre por data e status. Atualize o status de cada pedido.</p>

      <!-- Filtros -->
      <form method="GET" action="/admin/pedidos" class="bg-white rounded-2xl shadow-sm border border-stone-200/80 p-6 mb-8">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 items-end">
          <div>
            <label class="block text-sm font-medium text-stone-600 mb-1.5">Data início</label>
            <input type="date" name="dataInicio" value="<%= filters.dataInicio %>"
              class="w-full border border-stone-300 rounded-xl px-4 py-2.5 focus:ring-2 focus:ring-amber-500/30 focus:border-amber-500">
          </div>
          <div>
            <label class="block text-sm font-medium text-stone-600 mb-1.5">Data fim</label>
            <input type="date" name="dataFim" value="<%= filters.dataFim %>"
              class="w-full border border-stone-300 rounded-xl px-4 py-2.5 focus:ring-2 focus:ring-amber-500/30 focus:border-amber-500">
          </div>
          <div>
            <label class="block text-sm font-medium text-stone-600 mb-1.5">Status</label>
            <select name="status" class="w-full border border-stone-300 rounded-xl px-4 py-2.5 focus:ring-2 focus:ring-amber-500/30 focus:border-amber-500">
              <option value="">Todos</option>
              <option value="novo" <%= filters.status === 'novo' ? 'selected' : '' %>>Novo</option>
              <option value="em_preparo" <%= filters.status === 'em_preparo' ? 'selected' : '' %>>Em preparo</option>
              <option value="finalizado" <%= filters.status === 'finalizado' ? 'selected' : '' %>>Finalizado</option>
              <option value="entregue" <%= filters.status === 'entregue' ? 'selected' : '' %>>Entregue</option>
              <option value="cancelado" <%= filters.status === 'cancelado' ? 'selected' : '' %>>Cancelado</option>
            </select>
          </div>
          <div class="flex gap-2">
            <button type="submit" class="flex-1 bg-amber-600 hover:bg-amber-700 text-white font-medium py-2.5 px-4 rounded-xl transition shadow-sm">Filtrar</button>
            <a href="/admin/pedidos" class="py-2.5 px-4 rounded-xl border border-stone-300 text-stone-600 hover:bg-stone-50 font-medium transition">Limpar</a>
          </div>
        </div>
      </form>

      <!-- Tabela -->
      <div class="bg-white rounded-2xl shadow-sm border border-stone-200/80 overflow-hidden">
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="bg-stone-50 border-b border-stone-200">
                <th class="text-left py-4 px-6 text-sm font-semibold text-stone-600">#</th>
                <th class="text-left py-4 px-6 text-sm font-semibold text-stone-600">Data</th>
                <th class="text-left py-4 px-6 text-sm font-semibold text-stone-600">Cliente</th>
                <th class="text-left py-4 px-6 text-sm font-semibold text-stone-600">Itens</th>
                <th class="text-left py-4 px-6 text-sm font-semibold text-stone-600">Total</th>
                <th class="text-left py-4 px-6 text-sm font-semibold text-stone-600">Pagamento</th>
                <th class="text-left py-4 px-6 text-sm font-semibold text-stone-600">Status</th>
                <th class="text-left py-4 px-6 text-sm font-semibold text-stone-600">Ação</th>
              </tr>
            </thead>
            <tbody>
              <% pedidos.forEach((p, i) => { %>
                <tr class="border-b border-stone-100 hover:bg-amber-50/30 transition">
                  <td class="py-4 px-6 font-mono text-stone-500">#<%= p.id %></td>
                  <td class="py-4 px-6 text-sm text-stone-600"><%= new Date(p.criado_em).toLocaleDateString('pt-BR', { day: '2-digit', month: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %></td>
                  <td class="py-4 px-6"><%= p.telefone || '—' %></td>
                  <td class="py-4 px-6 text-sm max-w-xs">
                    <% if (p.itens && p.itens.length) { %>
                      <ul class="space-y-0.5">
                        <% p.itens.forEach(i => { %>
                          <li><%= i.nome_item %> ×<%= i.quantidade %></li>
                        <% }); %>
                      </ul>
                    <% } else { %>—<% } %>
                  </td>
                  <td class="py-4 px-6 font-semibold text-green-700">R$ <%= Number(p.total || 0).toFixed(2) %></td>
                  <td class="py-4 px-6 text-stone-600"><%= p.forma_pagamento || '—' %></td>
                  <td class="py-4 px-6">
                    <span class="inline-flex items-center px-2.5 py-1 rounded-lg text-xs font-medium
                      <%= p.status === 'novo' ? 'bg-amber-100 text-amber-800' :
                          p.status === 'em_preparo' ? 'bg-blue-100 text-blue-800' :
                          p.status === 'finalizado' || p.status === 'entregue' ? 'bg-green-100 text-green-800' :
                          p.status === 'cancelado' ? 'bg-stone-200 text-stone-600' : 'bg-stone-100 text-stone-700' %>">
                      <%= p.status %>
                    </span>
                  </td>
                  <td class="py-4 px-6">
                    <form method="POST" action="/admin/pedido/<%= p.id %>/status" class="flex items-center gap-2">
                      <input type="hidden" name="redirect" value="pedidos">
                      <input type="hidden" name="redirectQuery" value="<%= typeof redirectQuery !== 'undefined' ? redirectQuery : '' %>">
                      <select name="status" class="border border-stone-300 rounded-lg px-3 py-1.5 text-sm focus:ring-2 focus:ring-amber-500/30">
                        <option value="novo" <%= p.status === 'novo' ? 'selected' : '' %>>Novo</option>
                        <option value="em_preparo" <%= p.status === 'em_preparo' ? 'selected' : '' %>>Em preparo</option>
                        <option value="finalizado" <%= p.status === 'finalizado' ? 'selected' : '' %>>Finalizado</option>
                        <option value="entregue" <%= p.status === 'entregue' ? 'selected' : '' %>>Entregue</option>
                        <option value="cancelado" <%= p.status === 'cancelado' ? 'selected' : '' %>>Cancelado</option>
                      </select>
                      <button type="submit" class="bg-amber-600 hover:bg-amber-700 text-white text-sm px-3 py-1.5 rounded-lg font-medium transition">Ok</button>
                    </form>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <% if (pedidos.length === 0) { %>
          <div class="py-16 text-center text-stone-500">Nenhum pedido encontrado com os filtros selecionados.</div>
        <% } %>
      </div>

      <!-- Paginação -->
      <% if (pagination.totalPages > 1) { %>
        <div class="mt-6 flex flex-wrap items-center justify-between gap-4">
          <p class="text-sm text-stone-500">
            Mostrando <%= (pagination.page - 1) * pagination.perPage + 1 %>–<%= Math.min(pagination.page * pagination.perPage, pagination.total) %> de <%= pagination.total %> pedidos
          </p>
          <div class="flex items-center gap-1">
            <% var baseArr = []; if (filters.status) baseArr.push('status=' + encodeURIComponent(filters.status)); if (filters.dataInicio) baseArr.push('dataInicio=' + encodeURIComponent(filters.dataInicio)); if (filters.dataFim) baseArr.push('dataFim=' + encodeURIComponent(filters.dataFim)); var base = baseArr.join('&'); %>
            <% if (pagination.page > 1) { %>
              <a href="/admin/pedidos?<%= base ? base + '&' : '' %>page=<%= pagination.page - 1 %>" class="px-4 py-2 rounded-xl border border-stone-300 text-stone-600 hover:bg-stone-50 font-medium text-sm">Anterior</a>
            <% } %>
            <% for (var i = 1; i <= pagination.totalPages; i++) { %>
              <% if (i === pagination.page) { %>
                <span class="px-4 py-2 rounded-xl bg-amber-600 text-white font-medium text-sm"><%= i %></span>
              <% } else { %>
                <a href="/admin/pedidos?<%= base ? base + '&' : '' %>page=<%= i %>" class="px-4 py-2 rounded-xl border border-stone-200 text-stone-600 hover:bg-amber-50 font-medium text-sm"><%= i %></a>
              <% } %>
            <% } %>
            <% if (pagination.page < pagination.totalPages) { %>
              <a href="/admin/pedidos?<%= base ? base + '&' : '' %>page=<%= pagination.page + 1 %>" class="px-4 py-2 rounded-xl border border-stone-300 text-stone-600 hover:bg-stone-50 font-medium text-sm">Próxima</a>
            <% } %>
          </div>
        </div>
      <% } %>
    </div>
  </main>
</div>

</body>
</html>
